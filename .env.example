# Bangla Plagiarism Detection API - Environment Variables
# Copy this file to .env and fill in your values

# API Configuration
API_TITLE="Bangla Plagiarism Detection API"
API_VERSION="1.0.0"
API_DESCRIPTION="ML-powered plagiarism detection system for Bangla language text"
HOST="0.0.0.0"
PORT="5000"
DEBUG="false"

# Redis Configuration (REQUIRED)
# Complete Redis connection string - the system will use this for both Celery queue and result storage
REDIS_URL="redis://localhost:6379/0"

# Optional Redis components (only needed if not using REDIS_URL)
REDIS_HOST="localhost"
REDIS_PORT="6379" 
REDIS_DB="0"
REDIS_PASSWORD=""

# Celery Configuration (defaults to REDIS_URL if not specified)
CELERY_BROKER_URL=""
CELERY_RESULT_BACKEND=""
CELERY_WORKER_CONCURRENCY="2"
CELERY_TASK_TIME_LIMIT="300"
CELERY_RESULT_EXPIRES="3600"

# Flower Monitoring Configuration
FLOWER_PORT="5555"
FLOWER_ADDRESS="0.0.0.0"
FLOWER_BASIC_AUTH=""

# ML Model Configuration
MODEL_NAME="tfidf-bangla"
MODEL_CACHE_DIR=""

# Plagiarism Detection Settings
DEFAULT_THRESHOLD="0.7"
MAX_TEXT_LENGTH="50000"
MAX_CANDIDATE_TEXTS="100"
ENABLE_PREPROCESSING="true"
BATCH_SIZE="32"

# Webhook Configuration
WEBHOOK_TIMEOUT="30"
WEBHOOK_MAX_RETRIES="3"
WEBHOOK_SECRET=""

# Security Configuration
CORS_ORIGINS="*"
API_KEY=""

# Logging Configuration
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Rate Limiting
RATE_LIMIT_REQUESTS="100"
RATE_LIMIT_WINDOW="3600"